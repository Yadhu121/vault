@model List<photoCloud.Models.fileModel>

<link rel="stylesheet" href="~/css/userhome.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<div class="userhome-wrapper">
    <div class="userhome-card">
        <h2>My Files</h2>

        @if (!Model.Any())
        {
            <p>No files uploaded yet.</p>
        }
        else
        {
            <div class="files-grid">
                @foreach (var file in Model)
                {
                    <div>
                   
                        @if (file.contentType.StartsWith("image"))
                        {
                            <img src="@file.filePath" style="max-width:180px; max-height:180px;" />
                        }
                        else
                        {
                            <a href="@file.filePath" target="_blank">
                                Open file
                            </a>
                        }

                    </div>
                }
            </div>
        }

        <form asp-controller="fileInsert" asp-action="files" method="get">
            <button type="submit" class="floating-btn"> <i class="fa-solid fa-upload"></i> </button>
        </form>
    </div>
</div>
