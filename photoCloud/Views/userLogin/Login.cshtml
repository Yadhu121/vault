<link rel="stylesheet" href="~/css/login.css" />

<div class="vault-bg">
    <svg viewBox="0 0 100 20" preserveAspectRatio="none">
        <text x="-1" y="13"
              font-size="20"
              font-family="Times New Roman, Times, serif">
            VAULT
        </text>
    </svg>
</div>

<div class="login-container">
    <h1 id="vault">VAULT</h1>
    <div class="login-card">
        <h2>Login</h2>

        <form asp-action="on_click" method="post">

            <div>
                <label id="login1">Username or Email</label><br />
                <input type="text" name="loginInput" id="log" placeholder="VaultUser" required />
            </div>
            <br />

            <div>
                <label>Password</label><br />
                <input type="password" name="pass" id="password" placeholder="●●●●●" required />
            </div>
            <br />

            <button type="submit">Login</button>

        </form>

        @if (TempData["msg"] != null)
        {
            <span id="errorMsg">
                @TempData["msg"]
            </span>
            <script>
                document.getElementById('log').value="";
                document.getElementById('password').value="";
            </script>
        }
        else
        {
            <span id="errorMsg" style="display:none;"></span>
        }

        <p style="margin-top:15px;">
            Don't have an account?
            <a asp-controller="userRegister" asp-action="Register">Register here</a>
        </p>
    </div>
</div>